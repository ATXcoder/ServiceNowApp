<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.groundupcoding.servicenow.AddInstanceActivity">

    <TextView
        android:id="@+id/lbl_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Instance Name"/>
    <EditText
        android:id="@+id/instanceName"
        android:layout_height="45dp"
        android:layout_below="@id/lbl_name"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_txtbox"
        android:layout_width="match_parent"
         />

    <TextView
        android:id="@+id/lbl_address"
        android:layout_below="@id/instanceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:text="Instance URL"
        />
    <EditText
        android:id="@+id/instanceURL"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/lbl_address"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_txtbox"/>

    <Button
        android:id="@+id/saveButton"
        android:layout_width="195dp"
        android:layout_height="55dp"
        android:layout_below="@id/instanceURL"
        android:layout_marginTop="54dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/login_button"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="Save"/>
</RelativeLayout>
