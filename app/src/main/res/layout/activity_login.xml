<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_centerInParent="true"
        android:background="@drawable/login_box"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/lbl_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="Username"/>
        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="7dp"
            android:background="@drawable/login_txtbox"
            android:textColor="#000"
            android:layout_below="@id/lbl_userName"/>

        <TextView
            android:id="@+id/lbl_userPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_below="@id/userName"
            android:layout_marginTop="20dp"
            android:text="Password"/>
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="7dp"
            android:password="true"
            android:background="@drawable/login_txtbox"
            android:textColor="#000"
            android:layout_below="@id/lbl_userPassword"/>

        <TextView
            android:id="@+id/lbl_instance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_below="@id/password"
            android:layout_marginTop="20dp"
            android:text="Instance"/>
        <Spinner
            android:id="@+id/spinner_instance"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@id/lbl_instance"></Spinner>

        <Button
            android:id="@+id/loginButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_below="@id/spinner_instance"
            android:layout_marginTop="30dp"
            android:background="@drawable/login_button"
            android:textAppearance="@style/LoginButton"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="Login"/>
        </RelativeLayout>
</RelativeLayout>
