<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.groundupcoding.servicenow.IncidentTicketActivity">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow
                android:layout_marginBottom="5dp"
                android:background="@color/Orange">

                <TextView
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    android:layout_span="2"
                    android:text="Incident Details"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <TextView
                    android:background="@color/accent_material_dark"
                    android:padding="3dip"
                    android:text="Incident Number" />

                <TextView
                    android:id="@+id/incidentNumber"
                    android:padding="3dip"
                    />
            </TableRow>

            <TableRow android:layout_marginTop="10sp">

                <TextView
                    android:background="@color/accent_material_dark"
                    android:padding="3dip"
                    android:text="Open Date" />

                <TextView
                    android:id="@+id/incidentOpenDate"
                    android:padding="3dip"
                     />
            </TableRow>

            <TableRow android:layout_marginTop="10sp">

                <TextView
                    android:background="@color/accent_material_dark"
                    android:padding="3dip"
                    android:text="Open By" />

                <TextView
                    android:id="@+id/incidentOpenBy"
                    android:padding="3dip"
                    />
            </TableRow>

            <TableRow android:layout_marginTop="10sp">

                <TextView
                    android:background="@color/accent_material_dark"
                    android:padding="3dip"
                    android:text="Severity" />

                <TextView
                    android:id="@+id/incidentSeverity"
                    android:padding="3dip"
                     />
            </TableRow>

            <TableRow android:layout_marginTop="10sp">

                <TextView
                    android:background="@color/accent_material_dark"
                    android:padding="3dip"
                    android:text="Urgency" />

                <TextView
                    android:id="@+id/incidentUrgency"
                    android:padding="3dip"
                     />
            </TableRow>

            <TableRow android:layout_marginTop="10sp">

                <TextView
                    android:background="@color/accent_material_dark"
                    android:padding="3dip"
                    android:text="Priority" />

                <TextView
                    android:id="@+id/incidentPriority"
                    android:padding="3dip"
                     />
            </TableRow>

            <TableRow android:layout_marginTop="10sp">

                <TextView
                    android:background="@color/accent_material_dark"
                    android:padding="3dip"
                    android:text="Customer" />

                <TextView
                    android:id="@+id/incidentCustomer"
                    android:padding="3dip"
                    />
            </TableRow>

            <TableRow android:layout_marginTop="10sp">

                <TextView
                    android:background="@color/accent_material_dark"
                    android:padding="3dip"
                    android:text="Assigned To" />

                <TextView
                    android:id="@+id/incidentAssignee"
                    android:padding="3dip"
                     />
            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow
                android:layout_marginTop="10sp"
                android:background="@color/Orange">

                <TextView
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    android:layout_span="2"
                    android:text="Incident Information"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow android:layout_marginTop="5sp">

                <TextView
                    android:layout_span="1"
                    android:background="@color/background_floating_material_dark"
                    android:padding="3dip"
                    android:text="Description"
                    android:textColor="#fff" />

                <TextView
                    android:id="@+id/incidentTitle"
                    android:padding="3dip"
                    />
            </TableRow>

            <TableRow android:layout_marginTop="10sp">

                <TextView
                    android:layout_span="2"
                    android:background="@color/background_floating_material_dark"
                    android:padding="3dip"
                    android:text="Summary"
                    android:textColor="#fff" />
            </TableRow>

            <TableRow android:layout_marginTop="5sp">

                <TextView
                    android:id="@+id/incidentSummary"
                    android:layout_marginLeft="10sp"
                    android:layout_span="2"
                    android:padding="3dip"
                    />
            </TableRow>
            <TableRow android:layout_marginTop="5sp">

                <TextView
                    android:layout_span="2"
                    android:background="@color/background_floating_material_dark"
                    android:padding="3dip"
                    android:text="Activity"
                    android:textColor="#fff" />
            </TableRow>

            <TableRow android:layout_marginTop="5sp">

                <TextView
                    android:id="@+id/incidentActivity"
                    android:layout_marginLeft="10sp"
                    android:layout_span="2"
                    android:padding="3dip"
                    />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>